{
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "modules": true
      }
  },
  "env": { "node": true, "es6": true },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/*.tsx", "**/*.ts"],
  "rules": {
      "no-undef": "error",
      "prefer-const": "warn"
  }
}
